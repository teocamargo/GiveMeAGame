@model IEnumerable<GiveMeAGame.Models.Friend>

@{
    ViewBag.Title = "Listagem de Amigos";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Incluir Amigo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FriendName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FriendName)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.FriendId }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.FriendId }) |
            @if (item.Games.Count == 0)
            {
                @Html.ActionLink("Remover", "Delete", new { id = item.FriendId })
            }
        </td>
    </tr>
}

</table>
